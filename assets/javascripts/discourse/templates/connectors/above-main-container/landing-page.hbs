{{#if showLandingPage}}

<div id="landing-page-plugin-container">

	<!-- Media -->
	<div id="media-main" class="grid-center pb-5">
    <div class="col-10_xs-12" id="media-slideshow">
      <div>
        <img class="media-100-width" src="/plugins/OneDCU-Landing-Page-Plugin/images/OneDCU_Web_Web Slider_900x365_BeHeard.png" />
      </div>

      <div class="no-display">
        <img class="media-100-width" src="/plugins/OneDCU-Landing-Page-Plugin/images/OneDCU_Web_Web Slider_900x365_general.png" />
      </div>
    </div>
  </div>

  
  <!-- Clock -->
  <div id="clock-main" class="grid-center py-5 no-display main-text-color">
    
    <div class="col-10 grid-center">
    	<!-- Days -->
    	<div class="col text-center my-1" id="clock-main-days-col">
        <div class="px-1 py-1">
      		<div id="clock-days-value" class="font-size-6 clock-time-value">
      			00
      		</div>
      		<div class="font-size-1 clock-time-desc">
      			Days
      		</div>
        </div>
    	</div>

    	<!-- Hours -->
    	<div class="col text-center my-1">
        <div class="px-1 py-1">
      		<div id="clock-hours-value" class="font-size-6 clock-time-value">
      			00
      		</div>
      		<div class="font-size-1 clock-time-desc">
      			Hours
      		</div>
        </div>
    	</div>

    	<!-- Minutes -->
    	<div class="col text-center my-1">
    		<div class="px-1 py-1">
          <div id="clock-minutes-value" class="font-size-6">
      			00
      		</div>
      		<div class="font-size-1 clock-time-desc">
      			Minutes
      		</div>
        </div>
    	</div>

    	<!-- Seconds -->
    	<div class="col text-center my-1">
        <div class="px-1 py-1">
      		<div id="clock-seconds-value" class="font-size-6 clock-time-value">
      			00
      		</div>
      		<div class="font-size-1 clock-time-desc clock-time-value">
      			Seconds
      		</div>
        </div>
    	</div>
    </div>

	</div>

	<!-- Events -->
	<div id="events-main" class="grid py-5 no-display">

		<div class="col-4_xs-12_sm-6">
      {{event-list events=liveEvents label="Now On"}}
    </div>

    
    <div class="col-4_xs-12_sm-6">
      {{event-list events=nextEvents label="Coming Up"}}
    </div>

    
    <div class="col-4_xs-12_sm-12">
      <div class="otherItemList">

        <!-- Placeeholder becausee of spacing -->
        <div class="eventListTitle" style="visibility: hidden;">
          <span class="listText">Placeeholder</span>
        </div>
    
        
        <iframe style="width:100%; min-height:203px;" src="https://www.youtube.com/embed/foK_gAAhuGI" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
        </iframe>

        <div class="custom-button">
          <a href="/plugins/OneDCU-Landing-Page-Plugin/files/onedcu pdf placeholder.pdf" target="_blank" class="custom-button-link">Schedule for the 9th</a>
        </div>

        <div class="custom-button">
          <a href="/plugins/OneDCU-Landing-Page-Plugin/files/onedcu pdf placeholder.pdf" target="_blank" class="custom-button-link">Schedule for the 10th</a>
        </div>

        <div>
          <p> Having trouble logging in or signing up? </p>
        </div>
        <div class="custom-button" style="cursor: pointer;">
          <a href="mailto:onedcu@dcu.ie" class="custom-button-link">Contact us</a>
        </div>
        <!--
        <div class="custom-button">
          <a href="" target="_blank" class="custom-button-link">Schedule</a>
        </div>
         -->
      </div>
    </div>
	</div>

</div>

{{/if}}